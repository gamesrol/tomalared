<% if current_user -%> 
  <div id="nav">  
	    <%= link_to "&nbsp;#{current_user[:name]}&nbsp;",:controller => 'admin', :action => 'list', :id => current_user[:id], :target => "_blank" %> | 
	    <%= link_to '&nbsp;Grupos&nbsp;', :controller => 'tag', :action => 'list_tags', :target => "_blank" %> |
	    <%= link_to '&nbsp;Mapa&nbsp;', :controller => 'admin',:action => 'maps', :target => "_blank" %> | 
	    <% if controller.is_admin_user? -%> 
	      <%= link_to '&nbsp;Usuarios&nbsp;', :controller => 'admin', :action => 'users', :target => "_blank" %> |
	    <% end -%>
	    <%= link_to '&nbsp;Salir&nbsp;', :controller => 'admin', :action => 'logout' %>
 </div>

  <div id="logouser">
	<div id="marcofoto">
		<% if FileTest.exists?("public/img/#{current_user[:id]}.jpg") %>
			 <%= link_to image_tag( "/img/#{current_user[:id]}.jpg", :width => "80", :alt => "Tu imagen", :border => "3" , :class => 'fotoariba' ), 
						:controller => 'admin', :action => 'list_post_user', :id => current_user[:id] %>
		<% else %> 
			<%= link_to image_tag( "/img/default.jpg", :width => "80", :alt => "Tu imagen", :border => "3", :class => 'fotoariba'),  
						:action => 'list_post_user', :id => current_user[:id] %> 
		<% end -%>
	</div>
  </div>
<% else %>
<div id="login">
       <div>
	  <%= form_tag :controller => 'external', :action=> 'login' %>
	      Usuario:
	      <%= text_field 'user', 'name', :value => '', :size => 15 %>
	      Clave:
	      <%= password_field 'user', 'password', :size => 15 %>

	      <%= submit_tag "Entrar" %>
	      <%#<%= check_box_tag 'remember_me'%/>  &iquest;Recordar? <br/>%>
	   <%= end_form_tag %>
       </div>
</div>
<% end %>

