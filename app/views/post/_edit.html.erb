<% if current_user %>
<%= form_tag '/save_post' do %>
<div class="new">
    <div class="new-foto">
        <br/>
        <% if FileTest.exists?("public/img/#{current_user[:id]}.jpg") %>
        <div class="mediano-muneco" style="background: url(/img/<%= current_user[:id]%>.jpg) no-repeat center; background-size: 200%;"></div>
        <% else %>
        <div class="mediano-muneco" style="background: url(/img/default.jpg) no-repeat center; background-size: 200%;"></div>
        <% end -%>
    </div>

    <div class="new-editor">

        <div id="textarea">
            <%= text_area 'post','content' , :class => 'textarea' %>
            <%= text_field_tag 'tags', @tags, :class => 'new-tag', :placeholder => '*Introduce los tags separados por espacios, sin almoadilla', :style => "display:none" %>
            <%= hidden_field 'post', 'user_id', :value => current_user[:id] %>
            <%= hidden_field 'post', 'id', :value => params[:id] %>
            <%= hidden_field 'post', 'post_type', :value => 'quote' %>
        </div>
        <%= submit_tag 'Tumblear', :id => "tumblear" %>
    </div>
</div>
<% end %>
<div id= "posts">
    <%= render :partial => 'tumble/posts', :collection => @posts, :as => "post" %>
</div>
<% end %>

