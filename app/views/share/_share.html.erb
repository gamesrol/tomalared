<% if Share.post_user_share(post_id, current_user[:id]) %>
		<%= link_to '', {:controller => :share, :action => 'unshare', :post_id => post_id},
			:data => {:confirm => "¿Seguro que quieres dejar de compartir este post?"}, :method => :delete, :class => 'iconUnshare linkRemote', :title => 'UnShare'   %>
<% else %>
    	<%= link_to '', {:controller => :share, :action => 'share', :post_id => post_id},
    		:data => { :confirm => "¿Seguro que quieres compartir este post?"}, :method => :post, :class => 'iconShare linkRemote', :title => 'Share'  %>
<% end %> 