<center>
<h4>Editar usuario</h4>
<% @page_name = "Editar tu usuario" -%>

<p>
<%= form_tag '/updatefoto', :multipart=> true do %>
	Escoja un foto

<br/>
		<% if FileTest.exists?("public/img/#{current_user[:id]}.jpg") %>
			 <%= image_tag( "/img/#{current_user[:id]}.jpg", :size => "300", :alt => "Tu imagen", :class => "post_foto")  %>
		<% else %>
			<%= image_tag( "/img/default.jpg", :size => "300", :alt => "Tu imagen", :class => "post_foto") %>
		<% end -%>
<br/>
		<%= file_field_tag 'user_pic', :accept => 'image/png,image/gif,image/jpeg' %>




		<%= submit_tag "Subir foto" %>
<% end %>
</p>
<%= form_for @user do |f| %>
  <%#= f.error_messages %>
  <p>
    <%= f.label :nombre_del_perfil %><br />
    <%= f.text_field :profile %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_field :bio %>
  </p>
    <p>
    <%= f.label :website %><br />
    <%= f.text_field :url %>
  </p>
  
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Submit" %></p>

<% end %>

<br /><%= link_to "My Profile", account_path %>
<center>

