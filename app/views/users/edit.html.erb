<h4>Editar usuario</h4>
<% @page_name = "Editar tu usuario" -%>
<br>
<center>
<%= form_for @user do |f| %>
  <%#= f.error_messages %>
  <p>
    <%= f.label :profile %>
    <%= f.text_field :profile %>
  </p>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :biografia %>
    <%= f.text_field :bio %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Submit" %></p>

<% end %>
<%= form_tag '/updatefoto', :multipart=> true do %>
	Escoja un foto

<br/>
		<% if FileTest.exists?("public/img/#{current_user[:id]}.jpg") %>
			 <%= image_tag( "/img/#{current_user[:id]}.jpg", :size => "300", :alt => "Tu imagen", :class => "post_foto")  %>
		<% else %>
			<%= image_tag( "/img/default.jpg", :size => "300", :alt => "Tu imagen", :class => "post_foto") %>
		<% end -%>
<br/>
		<%= file_field_tag 'user_pic', :accept => 'image/png,image/gif,image/jpeg' %>
		<%= submit_tag "Subir foto" %>
<% end %>


