<section id="user-edit" >
<div id="tabs">
  <ul>
    <li><a href="#perfil"><span>Perfil</span></a></li>
    <li><a href="#cuenta"><span>Cuenta</span></a></li>
    <li><a href="#notificaciones"><span>Notificaciones</span></a></li>

  <div id="perfil">
 	<div class="user-edit">
	<%= form_tag '/updatefoto', :multipart=> true do %>
		Escoja un foto
	
	
			<% if FileTest.exists?("public/img/#{current_user[:id]}.jpg") %>
				 <%= image_tag( "/img/#{current_user[:id]}.jpg", :width => "100%", :alt => "Tu imagen", :class => "post_foto")  %>
			<% else %>
				<%= image_tag( "/img/default.jpg", :width => "100%", :alt => "Tu imagen", :class => "post_foto") %>
			<% end -%>
	
			<%= file_field_tag 'user_pic', :accept => 'image/png,image/gif,image/jpeg' %>
			<br/>	
			<%= submit_tag "Subir foto" %>	
	</div>
		
		<% end %>
		<div class="user-edit">	  
		<%= form_for @user do |f| %>
		  <%#= f.error_messages %>
		    <%= f.label :nombre_del_perfil %>
		    <%= f.text_field :profile %>
	   		<br />  <br />
		    <%= f.label :bio %>
		    <%= f.text_field :bio %>
			<br />  <br />
		    <%= f.label :website %>
		    <%= f.text_field :url %>
			<br />  <br />
		  <%= f.submit "Cambiar" %>
		
		<% end %>
  		</div>
  </div>
  
  <div id="cuenta">
	<div class="user-edit">	  
		<%= form_for @user do |f| %>
		  <%#= f.error_messages %>
		    <%= f.label :email %>
		    <%= f.text_field :email %>
			<br />  <br />
		    <%= f.label :contraseña %>
		    <%= f.text_field :password %>
			<br />  <br />
			<%= f.label :confirmar_contraseña %>
		    <%= f.text_field :password_confirmation %>
			<br />  <br />
		  <%= f.submit "Cambiar" %>
		
		<% end %>
  		</div>
  </div>
  

  <div id="notificaciones">
  		<br />  <br />
  		<li>Rebibir notificaciones de los grupos</li>
  		<br />  <br />
  		<li>Recibir notificaciones de tus publicaciones</li>
  		<br />  <br />
  		<li>Recibir notificaciones cuando te mencionan</li>
		<br />  <br />
  </div>

<script>
$( "#tabs" ).tabs();
</script>
  </ul>
  </div>
</section>