<div id="login">
	<h1>Login</h1>
	<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
		<%= render "shared/error_messages", :target => @user_session %>
		<%= f.text_field :name, :placeholder => 'Username' %><br/>
		<%= f.password_field :password, :placeholder => 'Password' %><br/>
		<%= f.submit "Login" %>
		<%= f.check_box :remember_me %> Remember me  <br/>
		<%= link_to 'Regístrate', :controller => 'users', :action => 'new' %><br/>
		<%= link_to 'Olvidaste tu contraseña?', password_resets_path %>
	<% end %>
</div>

