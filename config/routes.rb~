Fra::Application.routes.draw do

	match 'group/:tag' => 'tag#list_post_tags'
	match 'group/:id' => 'tag#list_post_tags'
        match 'user/:name' => 'admin#list_post_user'
	match 'user' => 'admin#list_post_user'


	match 'save_post' => 'admin#save_post'
	match 'edit' => 'admin#edit'
	match 'delete' => 'admin#delete'

	match 'login' => 'admin#login'
	match 'me' => 'admin#perfil'
	match 'logout' => 'admin#logout'

	match 'list' => 'admin#list'
	match 'groups' => 'tag#list_tags'
	match 'post/:id' => 'admin#list_post'
	match 'list_post' => 'admin#list_post'
	match 'maps' => 'admin#maps'
        
	match 'users' => 'admin#users'
	match 'delete_tag' => 'admin#delete_tag'

	root :to => 'admin#create_user'

end
